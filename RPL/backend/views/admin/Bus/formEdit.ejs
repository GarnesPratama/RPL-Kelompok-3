<form action="/bus/edit<%= bus._id %>?_method=PUT " method="POST">
      <div class="form-group">
    <label for="">Masukkan Kode </label>
    <input type="text" class="form-control" id="code" name="code" value="<%= bus.code %> ">
  </div>
  <div class="form-group">
    <label for="">Masukkan Nama bus</label>
    <input type="text" class="form-control" id="namaBus" name="namaBus" value="<%= bus.namaBus %> ">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Masukkan Tujuan</label>
    <input type="text" class="form-control" id="tujuan" name="tujuan" value="<%= bus.tujuan %> ">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Masukkan Kelas Bus</label>
    <input type="text" class="form-control" id="classBus" name="classBus" value="<%= bus.classBus %> ">
  </div>
      <div class="form-group">
    <label for="exampleInputPassword1">Masukkan No. Kursi</label>
    <input type="text" class="form-control" id="noKursi" name="noKursi" value="<%= bus.noKursi %> ">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Tanggal Berangkat</label>
    <input type="date" class="form-control" id="dateStart" name="dateStart" value="<%= bus.dateStart %> ">
  </div>
    <div class="form-group">
    <label for="exampleInputPassword1">Tanggal Sampai</label>
    <input type="date" class="form-control" id="dateEnd" name="dateEnd" value="<%= bus.dateEnd %> ">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>