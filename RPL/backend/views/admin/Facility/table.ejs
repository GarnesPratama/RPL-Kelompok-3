                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Data Agen </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Ttile</th>
                                            <th>Image</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                         <% for(let i=0; i<facility.length; i++) { %>
                                        <tr>
                                           
                                            <td>
                                                <%= i+1 %>
                                            </td>

                                            <td>
                                                <%= facility[i].title %>
                                            </td>
                                              <td>
                                                  <img src="  <%= facility[i].image %>" alt="" srcset="" height="70px">
                                              
                                            </td>
                                            <td>
                                                <form action="/facility/delete<%= facility[i]._id %>?_method=DELETE " method="POST">
                                                    <a href="/facility/edit<%= facility[i].id %> ">
                                                        <i class="bi bi-pencil btn btn-success"></i>
                                                    </a>
                                                    <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-trash "></i>
                                                    </button>

                                                </form>

                                            </td>
                                          
                                        </tr>
                                          <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>